<%= form_tag(stores_path, method: 'get', role: 'form', class: "form-inline" ) do %>
  <fieldset>
    <div class="search-form-block">
      <div class="row">
        <div class="col-md-10 col-sm-10">
          <%= text_field_tag(:suggestId, nil, placeholder: "请输入所在地址,或商圈,或大厦", class: "form-control input-lg input-bigger", autofocus: true) %>
          <div id="searchResultPanel"></div>
          <input class="lng" type="hidden" value name="lng">
          <input class="lat" type="hidden" value name="lat">
        </div>
        <div class="col-md-2 col-sm-2">
          <button type="submit" class="btn btn-lg btn-block btn-success btn-bigger search-form-button">下单</button>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>
